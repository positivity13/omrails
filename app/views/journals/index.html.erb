<div class="container">
  <h1>Journals</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Content1</th>
        <th>Content2</th>
        <th>Content3</th>
        <th>Content4</th>
        <th>Content5</th>
        <th>Content6</th>
        <th>Content7</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @journals.each do |journal| %>
        <tr>
          <td><% date = journal.created_at %>
              <%= date.strftime("%a %v") %>
          </td>
          <td><%= journal.content1 %></td>
          <td><%= journal.content2 %></td>
          <td><%= journal.content3 %></td>
          <td><%= journal.content4 %></td>
          <td><%= journal.content5 %></td>
          <td><%= journal.content6 %></td>
          <td><%= journal.content7 %></td>
          <% if journal.user == current_user %>
            <td><%= link_to 'Show', journal %></td>
            <td><%= link_to 'Edit', edit_journal_path(journal) %></td>
            <td><%= link_to 'Destroy', journal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <% if user_signed_in? %>
    <%= link_to 'New Journal', new_journal_path %>
  <% end %>
</div>